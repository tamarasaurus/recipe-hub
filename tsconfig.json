{
    "compilerOptions": {
        "allowJs": true,
        "target": "es6",
        "lib": [
            "es2017",
            "es5",
            "es6",
            "es2015.promise",
            "dom"
        ],
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "strictPropertyInitialization": false,
        "resolveJsonModule": true
    },
    "include": [
        "api/src/**/*", "api.ts",
        "contracts/**/*",
        "attributes/**/*",
        "index.ts",
        "index.d.ts"
    ],
    "exclude": [
        "node_modules",
        "frontend"
    ]
}
