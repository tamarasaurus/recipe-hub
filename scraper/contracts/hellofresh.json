{
    "itemSelector": "body > div",
    "scrapeAfterLoading": true,
    "attributes": {
        "name": {
            "type": "text",
            "selector": "[data-test-id=\"recipeDetailFragment.recipe-name\"]"
        },
        "duration": {
            "type": "duration",
            "selector": "span:contains('minutes')"
        },
        "ingredients": {
            "itemSelector": "[data-test-id=\"recipeDetailFragment.ingredients\"] > div:nth-child(4) > div > div",
            "attributes": {
                "label": { "type": "text", "selector": "div p:nth-child(2)" },
                "quantity": { "type": "quantity", "selector": "div p:nth-child(1)" },
                "unit": { "type": "unit", "selector": "div p:nth-child(1)"}
            }
        },
        "portions": {
            "type": "digit",
            "selector": "[data-test-id=\"recipeDetailFragment.ingredients\"] button[checked]"
        },
        "imageurl": {
            "type": "link",
            "selector": "img[srcset]",
            "attribute": "src"
        },
        "categories": {
            "type": "csv",
            "selector": "[data-id^=\"recipeDetailFragment.breadcrumbs\"]",
            "attribute": "title"
        },
        "calories": {
            "type": "digit",
            "selector": "[data-test-id=\"recipeDetailFragment.nutrition-values\"] div:nth-child(3) div div:nth-child(3) span:nth-child(2)"
        }
    }
}
