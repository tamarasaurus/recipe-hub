{
  "name": "recipe-hub-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "lodash": "^4.17.14",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "^3.0.1",
    "react-spring": "^8.0.20",
    "styled-components": "^5.0.0-beta.0"
  },
  "devDependencies": {
    "@testing-library/react": "^8.0.1",
    "husky": "^2.4.1",
    "jest-fetch-mock": "^2.1.2",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prettier": "npx prettier --single-quote --trailing-comma all --no-semi --arrow-parens always --write src/**/*.{js,jsx,ts,tsx,json,css,scss,md}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --trailing-comma all --no-semi --arrow-parens always --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
